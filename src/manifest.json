{
  "manifest_version": 2,
  "name": "CryptUP: Encrypt Gmail with PGP",
  "description": "Simple end-to-end encryption to secure email and attachments on Google.",
  "version": "2.5.6",
  "browser_action": {
    "default_icon": "img/logo-19-19-white-green.png",
    "default_title": "CryptUP Encryption for Gmail",
    "default_popup": "/chrome/popups/default.htm"
  },
  "icons": {
    "16": "/img/logo-16-16-white-green.png",
    "48": "/img/logo-48-48-white-green.png",
    "128": "/img/logo-128-128-white-green.png"
  },
  "permissions": ["storage", "https://www.googleapis.com/*"],
  "optional_permissions": ["https://www.google.com/*"],
  "content_scripts": [
    {
      "matches": ["*://mail.google.com/*"],
      "js": [
        "/lib/jquery.min.js",
        "/lib/striptags.js",
        "/js/common/storage.js",
        "/js/common/common.js",
        "/js/content_scripts/gmail_tab/elements/inject.js",
        "/js/content_scripts/gmail_tab/elements/notifications.js",
        "/js/content_scripts/gmail_tab/elements/factory.js",
        "/js/content_scripts/gmail_tab/elements/replace.js",
        "/js/content_scripts/gmail_tab/setup.js",
        "/js/content_scripts/gmail_tab/gmail_tab.js"
      ]
    },
    {
      "matches": ["*://accounts.google.com/o/oauth2/approval*"],
      "js": [
        "/js/common/common.js",
        "/js/content_scripts/oauth_window/oauth_window.js"
      ]
    }
  ],
  "background": {
    "scripts": [
      "/lib/jquery.min.js",
      "/lib/openpgp.js",
      "/lib/require.js",
      "/js/common/keyserver.js",
      "/js/common/storage.js",
      "/js/common/gmail_api.js",
      "/js/common/common.js",
      "/js/background_process/attests.js",
      "/js/background_process/google_auth.js",
      "/js/background_process/migrations.js",
      "/js/background_process/background_process.js"
    ]
  },
  "web_accessible_resources": [
    "/css/gmail.css",
    "/css/font-awesome.min.css",
    "/fonts/fontawesome-webfont.ttf",
    "/fonts/fontawesome-webfont.woff",
    "/fonts/fontawesome-webfont.woff2",
    "/img/logo-19-14-white.png",
    "/chrome/gmail_elements/new_message.htm",
    "/chrome/gmail_elements/reply_message.htm",
    "/chrome/gmail_elements/pgp_block.htm",
    "/chrome/gmail_elements/setup_dialog.htm",
    "/chrome/gmail_elements/attachment.htm",
    "/chrome/gmail_elements/passphrase.htm",
    "/chrome/gmail_elements/add_pubkey.htm",
    "/chrome/gmail_elements/pgp_pubkey.htm"
  ],
  "oauth2": {
    "client_id": "717284730244-ostjo2fdtr3ka4q9td69tdr9acmmru2p.apps.googleusercontent.com",
    "url_code": "https://accounts.google.com/o/oauth2/auth",
    "url_tokens": "https://www.googleapis.com/oauth2/v4/token",
    "url_redirect": "urn:ietf:wg:oauth:2.0:oob:auto",
    "state_header": "CRYPTUP_STATE_",
    "scopes": [
      "https://www.googleapis.com/auth/gmail.compose",
      "https://www.googleapis.com/auth/gmail.readonly",
      "https://www.googleapis.com/auth/userinfo.profile"
    ]
  }
}
