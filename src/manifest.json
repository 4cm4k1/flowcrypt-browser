{
    "manifest_version": 2,
    "name": "CryptUp MVP",
    "description": "Easy Gmail encryption",
    "version": "0.1",
    "browser_action": {
      "default_icon": "img/plugin-button.png",
      "default_popup": "elements/settings/settings-main.html"
    },
    "permissions": [
      "activeTab",
      "https://apis.google.com/",
      "https://accounts.google.com/",
      "identity",
      "storage"
    ],
    "content_scripts": [
      {
        "matches": ["http://mail.google.com/*", "https://mail.google.com/*"],
        "js": ["lib/jquery.min.js", "lib/openpgp.min.js", "lib/pubkeys.js", "elements/gmail/gmail-main.js"]
      }
    ],
    "web_accessible_resources": [
      "css/gmail-main.css",
      "elements/gmail/compose-window.htm",
      "elements/gmail/color-addresses.js",
      "lib/openpgp.min.js"
    ]
  }
