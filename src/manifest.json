{
  "manifest_version": 2,
  "name": "CryptUp MVP",
  "description": "Easy Gmail encryption",
  "version": "0.52",
  "browser_action": {
    "default_icon": "img/plugin-button.png",
    "default_popup": "chrome/plugin_button_popup.htm"
  },
  "permissions": ["activeTab", "https://apis.google.com/", "https://accounts.google.com/", "identity", "storage"],
  "content_scripts": [
    {
      "matches": ["http://mail.google.com/*", "https://mail.google.com/*"],
      "js": [
        "js/storage.js",
        "js/jquery.min.js",
        "js/signal.js",
        "js/replace_gmail_elements.js",
        "js/inject_cryptup_into_gmail.js"
      ]
    }
  ],
  "background": {
    "scripts": ["js/storage.js", "js/signal.js", "js/background_process.js"]
  },
  "web_accessible_resources": [
    "css/gmail.css",
    "css/font-awesome.min.css",
    "fonts/fontawesome-webfont.ttf",
    "fonts/fontawesome-webfont.woff",
    "fonts/fontawesome-webfont.woff2",
    "chrome/gmail_elements/new_message.htm",
    "chrome/gmail_elements/reply_message.htm",
    "chrome/gmail_elements/pgp_block.htm",
    "chrome/gmail_elements/setup_dialog.htm"
  ]
}
