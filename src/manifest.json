{
    "manifest_version": 2,
    "name": "CryptUp MVP",
    "description": "Easy Gmail encryption",
    "version": "0.1",
    "browser_action": {
      "default_icon": "img/plugin-button.png",
      "default_popup": "elements/settings/settings-main.html"
    },
    "permissions": [
      "activeTab",
      "https://apis.google.com/",
      "https://accounts.google.com/",
      "identity",
      "storage"
    ],
    "content_scripts": [
      {
        "matches": ["http://mail.google.com/*", "https://mail.google.com/*"],
        "js": [
          "lib/jquery.min.js",
          "lib/openpgp.min.js",
          "lib/pubkeys.js",
          "elements/gmail/color-addresses.js",
          "elements/gmail/compose-window.js",
          "elements/gmail/gmail-main.js"
        ]
      }
    ],
    "web_accessible_resources": [
      "css/gmail-main.css",
      "elements/gmail/compose-window.htm",
      "elements/gmail/color-addresses.js",
      "lib/openpgp.min.js",
      "lib/emailjs-mime-builder/node_modules/requirejs/require.js",
      "lib/gmail-api.js",
      "lib/emailjs-mime-builder/src/emailjs-mime-builder.js",
      "lib/emailjs-mime-builder/node_modules/emailjs-mime-codec/src/emailjs-mime-codec.js",
      "lib/emailjs-mime-builder/node_modules/emailjs-mime-types/src/emailjs-mime-types.js",
      "lib/emailjs-mime-builder/node_modules/punycode/punycode.js",
      "lib/emailjs-mime-builder/node_modules/emailjs-addressparser/src/emailjs-addressparser.js",
      "lib/emailjs-mime-builder/node_modules/emailjs-stringencoding/src/emailjs-stringencoding.js"
    ]
  }
